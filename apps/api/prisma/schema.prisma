generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Ingenio {
  id           Int           @id @default(autoincrement())
  name         String
  code         String        @unique
  location     String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  // Relaciones
  users        User[]
  sensors      Sensor[]
  technicians  Technician[]
  maintenances Maintenance[]
  failures     Failure[]
  auditLogs    AuditLog[]
}

model Sensor {
  id           Int           @id @default(autoincrement())
  sensorId     String        @unique
  name         String
  type         String
  location     String?
  active       Boolean       @default(true)
  config       Json?
  lastSeen     DateTime?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  // Multi-ingenio
  ingenioId    Int
  ingenio      Ingenio       @relation(fields: [ingenioId], references: [id])

  maintenances Maintenance[]
  failures     Failure[]
}

model Technician {
  id           Int            @id @default(autoincrement())
  name         String
  email        String?         @unique
  phone        String?
  active       Boolean         @default(true)

  // Multi-ingenio
  ingenioId    Int
  ingenio      Ingenio         @relation(fields: [ingenioId], references: [id])

  maintenances Maintenance[]   @relation("TechnicianMaintenances")
}

model Failure {
  id             Int          @id @default(autoincrement())
  sensorId       Int 
  occurredAt     DateTime     @default(now())
  description    String
  severity       String
  status         String        @default("pendiente")
  resolvedAt     DateTime?
  maintenanceId  Int?

  sensor         Sensor        @relation(fields: [sensorId], references: [id])
  maintenance    Maintenance?  @relation("MaintenanceFailures", fields: [maintenanceId], references: [id])

  // Multi-ingenio (redundante pero pr√°ctico para filtrar directo)
  ingenioId      Int
  ingenio        Ingenio       @relation(fields: [ingenioId], references: [id])
}

model Maintenance {
  id              Int           @id @default(autoincrement())
  sensorId        Int
  performedAt     DateTime      @default(now())
  type            String
  technicianId    Int?
  durationMinutes Int?
  notes           String?
  cost            Float?

  sensor          Sensor        @relation(fields: [sensorId], references: [id])
  technician      Technician?   @relation("TechnicianMaintenances", fields: [technicianId], references: [id])
  failures        Failure[]     @relation("MaintenanceFailures")

  // Multi-ingenio (igual que Failure)
  ingenioId       Int
  ingenio         Ingenio       @relation(fields: [ingenioId], references: [id])
}

enum UserRole {
  SUPERADMIN
  ADMIN
  TECNICO
  LECTOR
}

model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  name      String
  role      UserRole
  passwordHash String 
  createdAt DateTime   @default(now())

  // Multi-ingenio
  ingenioId Int
  ingenio   Ingenio    @relation(fields: [ingenioId], references: [id])
  auditLogs AuditLog[]
}

model AuditLog {
  id         Int       @id @default(autoincrement())
  userId     Int?
  ingenioId  Int?
  action     String
  entity     String?
  entityId   Int?
  ip         String?
  meta       Json?
  createdAt  DateTime  @default(now())

  user       User?     @relation(fields: [userId], references: [id])
  ingenio    Ingenio?  @relation(fields: [ingenioId], references: [id])
}
