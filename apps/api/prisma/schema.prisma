generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Ingenio {
  id           Int           @id @default(autoincrement())
  name         String
  code         String        @unique
  location     String?
  active       Boolean       @default(true)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  // Relaciones
  users        User[]
  sensors      Sensor[]
  technicians  Technician[]
  maintenances Maintenance[]
  failures     Failure[]
  auditLogs    AuditLog[]
  machines     Machine[]
}

model Machine {
  id           Int           @id @default(autoincrement())
  name         String
  code         String        @unique
  type         String?
  location     String?
  description  String?
  active       Boolean       @default(true)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  lastAnalysis Json?
  lastAnalyzedAt DateTime? 

  // Multi-ingenio
  ingenioId    Int
  ingenio      Ingenio       @relation(fields: [ingenioId], references: [id])

  // Relaciones
  sensors      Sensor[]
  maintenances Maintenance[]
  failures     Failure[]
}

model Sensor {
  id           Int           @id @default(autoincrement())
  sensorId     String        @unique
  name         String
  type         String
  location     String?
  active       Boolean       @default(true)
  config       Json?
  lastSeen     DateTime?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  // Pertenencia
  machineId    Int
  machine      Machine       @relation(fields: [machineId], references: [id])

  // Redundante pero útil para filtros directos por ingenio
  ingenioId    Int
  ingenio      Ingenio       @relation(fields: [ingenioId], references: [id])

  failures     Failure[]
  analyses     Analysis[]
}

model Technician {
  id           Int            @id @default(autoincrement())
  name         String
  email        String?         @unique
  phone        String?
  active       Boolean         @default(true)

  // Multi-ingenio
  ingenioId    Int
  ingenio      Ingenio         @relation(fields: [ingenioId], references: [id])

  maintenances Maintenance[]   @relation("TechnicianMaintenances")
}

model Failure {
  id             Int          @id @default(autoincrement())
  occurredAt     DateTime     @default(now())
  description    String
  severity       String
  status         String        @default("pendiente")
  resolvedAt     DateTime?

  // Máquina afectada (principal)
  machineId      Int
  machine        Machine       @relation(fields: [machineId], references: [id])

  // Sensor que detectó la falla (opcional)
  sensorId       Int?
  sensor         Sensor?       @relation(fields: [sensorId], references: [id])

  maintenanceId  Int?
  maintenance    Maintenance?  @relation("MaintenanceFailures", fields: [maintenanceId], references: [id])

  // Multi-ingenio (para filtrar directo)
  ingenioId      Int
  ingenio        Ingenio       @relation(fields: [ingenioId], references: [id])
}

model Maintenance {
  id              Int           @id @default(autoincrement())
  performedAt     DateTime      @default(now())
  type            String
  technicianId    Int?
  durationMinutes Int?
  notes           String?
  cost            Float?

  // Máquina a la que se le hace el mantenimiento
  machineId       Int
  machine         Machine       @relation(fields: [machineId], references: [id])

  technician      Technician?   @relation("TechnicianMaintenances", fields: [technicianId], references: [id])
  failures        Failure[]     @relation("MaintenanceFailures")

  // Multi-ingenio (igual que Failure)
  ingenioId       Int
  ingenio         Ingenio       @relation(fields: [ingenioId], references: [id])
}

model Analysis {
  id        Int      @id @default(autoincrement())
  sensorId  Int
  createdAt DateTime @default(now())
  data      Json     // análisis completo (features, scores, etc.)
  summary   String?  // resumen legible opcional

  sensor    Sensor   @relation(fields: [sensorId], references: [id])
}

enum UserRole {
  SUPERADMIN
  ADMIN
  TECNICO
  LECTOR
}

model User {
  id           Int        @id @default(autoincrement())
  email        String     @unique
  name         String
  role         UserRole
  passwordHash String
  createdAt    DateTime   @default(now())

  // Multi-ingenio
  ingenioId    Int?
  ingenio      Ingenio?    @relation(fields: [ingenioId], references: [id])
  auditLogs    AuditLog[]
}

model AuditLog {
  id         Int       @id @default(autoincrement())
  userId     Int?
  ingenioId  Int?
  action     String
  entity     String?
  entityId   Int?
  ip         String?
  meta       Json?
  createdAt  DateTime  @default(now())

  user       User?     @relation(fields: [userId], references: [id])
  ingenio    Ingenio?  @relation(fields: [ingenioId], references: [id])
}
